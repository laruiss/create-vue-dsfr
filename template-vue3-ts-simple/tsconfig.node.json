{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "./src/auto-imports.d.ts",
    "./env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vitest"]
  }
}
